         <script>
            let searchBtn = document.getElementById("mySearch");
            let searchInp = document.getElementById("myInput");
            let listings = document.getElementsByClassName("myCountry")

            searchInp.addEventListener("keyup", () => {
               let listingsDiv = document.getElementsByClassName("myCountryListing")
               let i = 0;
               for (listing of listings) {
                  listingsDiv[i].style.display = "inline";
                  if (searchInp.value.trim() != "" && searchInp.value.trim().toLowerCase() != listing.innerText.toLowerCase().trim().substring(0, searchInp.value.length)) {
                     listingsDiv[i].style.display = "none";
                  }
                  i++;
               }
            });
         </script>
